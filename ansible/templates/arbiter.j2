systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

storage:
  dbPath: {{ item.data_dir }}
  journal:
    enabled: true

replication:
  replSetName: {{ item.rs }}

net:
  port: 27017
  bindIp: 127.0.0.1,{{ item.local_ip }}

processManagement:
  timeZoneInfo: /usr/share/zoneinfo

security:
  keyFile: /etc/mongodb-keyfile
