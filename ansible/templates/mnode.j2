systemLog:
   destination: file
   path: "/var/log/mongodb/mongod.log"
   logAppend: true

storage:
  dbPath: {{ item.data_dir }}

sharding:
   clusterRole: shardsvr

replication:
   replSetName: {{ item.rs }}

net:
  port: 27017
  bindIp: {{ item.local_ip }}

security:
  keyFile: /etc/mongodb-keyfile

